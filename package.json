{
  "name": "argocd-gitops",
  "displayName": "GitOps Tools for ArgoCD",
  "description": "Manage Kubernetes Applications and Clusters using ArgoCD",
  "version": "0.0.5",
  "author": {
    "name": "Harsh Paliwal"
  },
  "publisher": "HarshPaliwal",
  "icon": "resources/icons/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/paliwal999harsh/vscode-argocd"
  },
  "bugs": {
    "url": "https://github.com/paliwal999harsh/vscode-argocd/issues",
    "email": "harshpaliwal.developer@gmail.com"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "homepage": "https://github.com/paliwal999harsh/vscode-argocd/blob/main/README.md",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "GitOps",
    "kubernetes",
    "argo",
    "argocd",
    "helm",
    "Azure",
    "AKS",
    "GCP",
    "oci",
    "devops"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "authentication": [
      {
        "id": "argocd",
        "label": "ArgoCD"
      }
    ],
    "views": {
      "argocd": [
        {
          "id": "argocdWelcome",
          "name": "Getting Started",
          "type": "webview",
          "when": "!isAuthenticated",
          "icon": "$(gear)"
        },
        {
          "id": "argocdClusters",
          "name": "Clusters",
          "when": "isAuthenticated && config.argocd.showClusters",
          "icon": "$(server)"
        },
        {
          "id": "argocdRepositories",
          "name": "Repositories",
          "when": "isAuthenticated && config.argocd.showRepositories",
          "icon": "$(repo)"
        },
        {
          "id": "argocdApplications",
          "name": "Applications",
          "when": "isAuthenticated && config.argocd.showApplications",
          "icon": "$(layers)"
        },
        {
          "id": "argocdTemplates",
          "name": "Templates",
          "when": "isAuthenticated && config.argocd.showTemplates",
          "icon": "$(file-code)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "argocd",
          "title": "ArgoCD",
          "icon": "resources/icons/logo.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "argocd.connection.add",
        "title": "Add Connection",
        "category": "ArgoCD",
        "icon": "$(add)"
      },
      {
        "command": "argocd.connection.switch",
        "title": "Switch Connection",
        "category": "ArgoCD",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "argocd.connection.edit",
        "title": "Edit Connection",
        "category": "ArgoCD",
        "icon": "$(edit)"
      },
      {
        "command": "argocd.connection.delete",
        "title": "Delete Connection",
        "category": "ArgoCD",
        "icon": "$(trash)"
      },
      {
        "command": "argocd.connection.list",
        "title": "List Connections",
        "category": "ArgoCD",
        "icon": "$(list-unordered)"
      },
      {
        "command": "argocd.account.showInfo",
        "title": "Show Account Information",
        "category": "ArgoCD",
        "icon": "$(account)",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.account.logout",
        "title": "Logout",
        "category": "ArgoCD",
        "icon": "$(sign-out)",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.output.show",
        "title": "Show Output",
        "category": "ArgoCD",
        "icon": "$(output)"
      },
      {
        "command": "argocd.output.setLogLevel",
        "title": "Set Log Level",
        "category": "ArgoCD",
        "icon": "$(filter)"
      },
      {
        "command": "argocd.cluster.refresh",
        "title": "Refresh Clusters",
        "category": "ArgoCD",
        "icon": "$(refresh)",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.cluster.add",
        "title": "Add Cluster",
        "category": "ArgoCD",
        "icon": "$(add)",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.cluster.remove",
        "title": "Remove Cluster",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.repository.refresh",
        "title": "Refresh Repositories",
        "category": "ArgoCD",
        "icon": "$(refresh)",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.repository.add",
        "title": "Add Repository",
        "category": "ArgoCD",
        "icon": "$(add)",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.repository.delete",
        "title": "Delete Repository",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.repository.copyUrl",
        "title": "Copy Repository URL",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.repository.createApplication",
        "title": "Create Application from Repository",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.application.refreshAll",
        "title": "Refresh Applications",
        "category": "ArgoCD",
        "icon": "$(refresh)",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.application.addApplication",
        "title": "Add Application",
        "category": "ArgoCD",
        "icon": "$(add)",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.application.addApplicationSet",
        "title": "Add ApplicationSet",
        "category": "ArgoCD",
        "icon": "$(add)",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.application.sync",
        "title": "Sync Application",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.application.refresh",
        "title": "Refresh Application",
        "icon": "$(refresh)",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.application.viewHistory",
        "title": "View Application History",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.application.edit",
        "title": "Edit Application",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.application.delete",
        "title": "Delete Application",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.resource.viewManifest",
        "title": "View Resource Manifest",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.template.refresh",
        "title": "Refresh Templates",
        "category": "ArgoCD",
        "icon": "$(refresh)"
      },
      {
        "command": "argocd.template.add",
        "title": "Add Template",
        "category": "ArgoCD",
        "icon": "$(add)"
      },
      {
        "command": "argocd.template.edit",
        "title": "Edit Template",
        "category": "ArgoCD"
      },
      {
        "command": "argocd.template.copy",
        "title": "Copy Template",
        "category": "ArgoCD"
      },
      {
        "command": "argocd.template.copyYaml",
        "title": "Copy Template YAML",
        "category": "ArgoCD"
      },
      {
        "command": "argocd.template.createApplication",
        "title": "Create Application from Template",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.template.delete",
        "title": "Delete Template",
        "category": "ArgoCD"
      },
      {
        "command": "argocd.application.createTemplate",
        "title": "Create Template from Application",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.output.show",
        "title": "Show Output",
        "category": "ArgoCD"
      },
      {
        "command": "argocd.welcome.show",
        "title": "Open Getting Started Guide",
        "category": "ArgoCD",
        "icon": "$(book)"
      },
      {
        "command": "argocd.createApplication.fromFolder",
        "title": "Create ArgoCD Application from Folder",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.createApplication.fromYaml",
        "title": "Create ArgoCD Application from YAML",
        "category": "ArgoCD",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.createApplication.fromYamlContextMenu",
        "title": "Create ArgoCD Application",
        "category": "ArgoCD",
        "icon": "$(cloud-upload)",
        "enablement": "isCliAvailable && isAuthenticated"
      },
      {
        "command": "argocd.validateYaml",
        "title": "Validate ArgoCD YAML",
        "category": "ArgoCD"
      },
      {
        "command": "argocd.scanWorkspace",
        "title": "Scan Workspace for ArgoCD YAML Files",
        "category": "ArgoCD"
      },
      {
        "command": "argocd.convertYamlToTemplate",
        "title": "Convert to ArgoCD Template",
        "category": "ArgoCD",
        "icon": "$(file-code)"
      }
    ],
    "viewsWelcome": [
      {
        "view": "argocdClusters",
        "contents": "Loading clusters...",
        "when": "isAuthenticated && isLoadingClusters"
      },
      {
        "view": "argocdRepositories",
        "contents": "Loading Repositories...",
        "when": "isAuthenticated && isLoadingRepositories"
      },
      {
        "view": "argocdRepositories",
        "contents": "No Repositories found.\n[Add Repository](command:argocd.repository.add)",
        "when": "isAuthenticated && !isLoadingRepositories && !hasRepositories"
      },
      {
        "view": "argocdApplications",
        "contents": "Loading applications...",
        "when": "isAuthenticated && isLoadingApplications"
      },
      {
        "view": "argocdApplications",
        "contents": "No applications found.\n[Add Application](command:argocd.application.addApplication)",
        "when": "isAuthenticated && !isLoadingApplications && !hasApplications"
      },
      {
        "view": "argocdTemplates",
        "contents": "No templates found.\n[Add Template](command:argocd.template.add)",
        "when": "!hasTemplates"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "argocd.createApplication.fromFolder",
          "when": "explorerResourceIsFolder",
          "group": "argocd@1"
        },
        {
          "command": "argocd.createApplication.fromYamlContextMenu",
          "when": "resourceExtname == .yaml || resourceExtname == .yml",
          "group": "argocd@2"
        },
        {
          "command": "argocd.convertYamlToTemplate",
          "when": "resourceExtname == .yaml || resourceExtname == .yml",
          "group": "argocd@3"
        },
        {
          "command": "argocd.validateYaml",
          "when": "resourceExtname == .yaml || resourceExtname == .yml",
          "group": "argocd@4"
        }
      ],
      "commandPalette": [
        {
          "command": "argocd.application.sync",
          "when": "false"
        },
        {
          "command": "argocd.application.refresh",
          "when": "false"
        },
        {
          "command": "argocd.application.viewHistory",
          "when": "false"
        },
        {
          "command": "argocd.application.edit",
          "when": "false"
        },
        {
          "command": "argocd.application.delete",
          "when": "false"
        },
        {
          "command": "argocd.repository.delete",
          "when": "false"
        },
        {
          "command": "argocd.repository.copyUrl",
          "when": "false"
        },
        {
          "command": "argocd.repository.createApplication",
          "when": "false"
        },
        {
          "command": "argocd.template.edit",
          "when": "false"
        },
        {
          "command": "argocd.template.copy",
          "when": "false"
        },
        {
          "command": "argocd.template.copyYaml",
          "when": "false"
        },
        {
          "command": "argocd.template.createApplication",
          "when": "false"
        },
        {
          "command": "argocd.template.delete",
          "when": "false"
        },
        {
          "command": "argocd.application.createTemplate",
          "when": "false"
        },
        {
          "command": "argocd.createApplication.fromFolder",
          "when": "false"
        },
        {
          "command": "argocd.createApplication.fromYaml",
          "when": "false"
        },
        {
          "command": "argocd.convertYamlToTemplate",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "argocd.connection.add",
          "when": "view == argocdWelcome",
          "group": "navigation"
        },
        {
          "command": "argocd.cluster.refresh",
          "when": "view == argocdClusters && isCliAvailable && isAuthenticated",
          "group": "navigation"
        },
        {
          "command": "argocd.cluster.add",
          "when": "view == argocdClusters && isCliAvailable && isAuthenticated",
          "group": "navigation"
        },
        {
          "command": "argocd.repository.refresh",
          "when": "view == argocdRepositories && isCliAvailable && isAuthenticated",
          "group": "navigation"
        },
        {
          "command": "argocd.repository.add",
          "when": "view == argocdRepositories && isCliAvailable && isAuthenticated",
          "group": "navigation"
        },
        {
          "command": "argocd.application.refresh",
          "when": "view == argocdApplications && isCliAvailable && isAuthenticated",
          "group": "navigation"
        },
        {
          "command": "argocd.application.addApplication",
          "when": "view == argocdApplications && isCliAvailable && isAuthenticated",
          "group": "navigation"
        },
        {
          "command": "argocd.template.refresh",
          "when": "view == argocdTemplates",
          "group": "navigation"
        },
        {
          "command": "argocd.template.add",
          "when": "view == argocdTemplates",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "argocd.cluster.remove",
          "when": "view == argocdClusters && viewItem == cluster && isCliAvailable && isAuthenticated",
          "group": "cluster@1"
        },
        {
          "command": "argocd.application.sync",
          "when": "view == argocdApplications && viewItem == application && isCliAvailable && isAuthenticated",
          "group": "application@1"
        },
        {
          "command": "argocd.application.refresh",
          "when": "view == argocdApplications && viewItem == application && isCliAvailable && isAuthenticated",
          "group": "application@2"
        },
        {
          "command": "argocd.application.viewHistory",
          "when": "view == argocdApplications && viewItem == application && isCliAvailable && isAuthenticated",
          "group": "application@3"
        },
        {
          "command": "argocd.application.edit",
          "when": "view == argocdApplications && viewItem == application && isCliAvailable && isAuthenticated",
          "group": "application@4"
        },
        {
          "command": "argocd.application.delete",
          "when": "view == argocdApplications && viewItem == application && isCliAvailable && isAuthenticated",
          "group": "application@5"
        },
        {
          "command": "argocd.repository.copyUrl",
          "when": "view == argocdRepositories && viewItem == repository && isCliAvailable && isAuthenticated",
          "group": "repository@1"
        },
        {
          "command": "argocd.repository.createApplication",
          "when": "view == argocdRepositories && viewItem == repository && isCliAvailable && isAuthenticated",
          "group": "repository@2"
        },
        {
          "command": "argocd.repository.delete",
          "when": "view == argocdRepositories && viewItem == repository && isCliAvailable && isAuthenticated",
          "group": "repository@3"
        },
        {
          "command": "argocd.application.createTemplate",
          "when": "view == argocdApplications && viewItem == application && isCliAvailable && isAuthenticated",
          "group": "template@1"
        },
        {
          "command": "argocd.template.edit",
          "when": "view == argocdTemplates && viewItem == template",
          "group": "template@1"
        },
        {
          "command": "argocd.template.edit",
          "when": "view == argocdTemplates && viewItem == template",
          "group": "template@1"
        },
        {
          "command": "argocd.template.copy",
          "when": "view == argocdTemplates && viewItem == template",
          "group": "template@2"
        },
        {
          "command": "argocd.template.copyYaml",
          "when": "view == argocdTemplates && viewItem == template",
          "group": "template@3"
        },
        {
          "command": "argocd.template.createApplication",
          "when": "view == argocdTemplates && viewItem == template && isCliAvailable && isAuthenticated",
          "group": "template@4"
        },
        {
          "command": "argocd.template.delete",
          "when": "view == argocdTemplates && viewItem == template",
          "group": "template@5"
        }
      ]
    },
    "configuration": {
      "title": "ArgoCD",
      "properties": {
        "argocd.showClusters": {
          "type": "boolean",
          "default": true,
          "description": "Show Clusters view"
        },
        "argocd.showRepositories": {
          "type": "boolean",
          "default": true,
          "description": "Show Repositories view"
        },
        "argocd.showApplications": {
          "type": "boolean",
          "default": true,
          "description": "Show Applications view"
        },
        "argocd.showTemplates": {
          "type": "boolean",
          "default": true,
          "description": "Show Templates view"
        },
        "argocd.refreshInterval": {
          "type": "number",
          "default": 30,
          "description": "Auto-refresh interval in seconds (0 to disable)"
        },
        "argocd.timeoutSeconds": {
          "type": "number",
          "default": 60,
          "description": "Timeout for ArgoCD CLI commands in seconds"
        },
        "argocd.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "description": "Output channel log level"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production --devtool hidden-source-map",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml,css,scss,html,mdx}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml,css,scss,html,mdx}\"",
    "test": "vscode-test"
  },
  "dependencies": {
    "@types/lodash": "^4.17.20",
    "@vscode/codicons": "^0.0.36",
    "git-url-parse": "^16.1.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "parse-path": "^7.1.0",
    "parse-uri": "^2.0.3",
    "punycode": "^2.3.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/normalize-url": "^4.1.0",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.38.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.4",
    "sinon": "^21.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "prettier": "^3.6.2"
  }
}
